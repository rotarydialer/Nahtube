<!DOCTYPE html>
<html>

<head>
  <title>Activity</title>

  <script src="/js/jquery-3.2.1.min.js"></script>

  <link href="/css/google-font-Roboto.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/css/nahtube.css">

  <script>
    function clearAll() {
        $("#activity-list").empty();
    }

    function getActivityForUser(username) {
        clearAll();

        // AJAX call to populate the Allowed Channels div
        $.get( "/parents/activity/" + username + '.json', function( data ) {
            $( ".result" ).html( data );
            $.each(data, function(index, entry) {
                row = '<div>' + (index+1) + '. ' + JSON.stringify(entry) + '</div>';
                console.log(entry);
                $("#activity-list").append(row);
            });
        });
    }
  </script>
</head>

